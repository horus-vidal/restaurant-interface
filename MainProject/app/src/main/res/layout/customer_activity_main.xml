<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/krustykrabbg"
    tools:context="com.example.chimchilla.krustykrab.customer_MainActivity"><![CDATA[

    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    ]]>

        <ImageButton
        android:id="@+id/GamesBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="31dp"
            android:adjustViewBounds="false"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@mipmap/agames" />

    <ImageButton
        android:id="@+id/DSBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/GamesBtn"
        android:layout_alignStart="@+id/GamesBtn"
        android:layout_alignTop="@+id/MusicBtn"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@button for daily special"
        app:srcCompat="@mipmap/ds_150x150" />

    <ImageButton
        android:id="@+id/MusicBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/FoodBtn"
        android:layout_alignStart="@+id/FoodBtn"
        android:layout_below="@+id/Entree"
        android:layout_marginTop="27dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@button for daily special"
        app:srcCompat="@mipmap/music_150x150" />

    <ImageButton
        android:id="@+id/FoodBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/GamesBtn"
        android:layout_marginEnd="114dp"
        android:layout_marginRight="114dp"
        android:layout_toLeftOf="@+id/GamesBtn"
        android:layout_toStartOf="@+id/GamesBtn"
        android:adjustViewBounds="false"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="100dp"
        app:srcCompat="@mipmap/food_1_150x150" />

    <TextView
        android:id="@+id/Entree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/FoodBtn"
        android:layout_alignLeft="@+id/FoodBtn"
        android:layout_alignStart="@+id/FoodBtn"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:text="Food"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/Games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Entree"
        android:layout_alignBottom="@+id/Entree"
        android:layout_alignLeft="@+id/DailySpecial"
        android:layout_alignStart="@+id/DailySpecial"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="Games"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/Dessert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/MusicBtn"
        android:layout_alignLeft="@+id/Entree"
        android:layout_alignStart="@+id/Entree"
        android:layout_marginBottom="14dp"
        android:text="Music"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/DailySpecial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Dessert"
        android:layout_alignBottom="@+id/Dessert"
        android:layout_alignEnd="@+id/DSBtn"
        android:layout_alignRight="@+id/DSBtn"
        android:gravity="start"
        android:text="Daily Special"
        android:textAlignment="textStart"
        android:visibility="invisible" />

    <Button
        android:id="@+id/BackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Dessert"
        android:layout_alignBottom="@+id/Dessert"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Back" />

    <Button
        android:id="@+id/CWBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/DSBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Call Waiter" />

    <Button
        android:id="@+id/VOBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/FoodBtn"
        android:text="View Order" /><![CDATA[









    Button
        android:id="@+id/CallBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Call Waiter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />





]]>
</RelativeLayout>
